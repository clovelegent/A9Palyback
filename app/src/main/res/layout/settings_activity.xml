<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="@dimen/gap10dp"
        android:id="@+id/setting_pwd_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="@dimen/gap5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_password"/>

        <TextView
            android:layout_marginLeft="@dimen/gap5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Pref_Password"
            android:textColor="@color/colorPassword"
            android:textSize="@dimen/settings_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_media_ll"
        android:layout_marginTop="@dimen/gap10dp"
        android:layout_below="@id/setting_pwd_ll"
        android:layout_margin="@dimen/gap5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_settings"/>

        <TextView
            android:layout_marginLeft="@dimen/gap5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/media_setting"
            android:text="@string/Pref_Settings"
            android:textColor="@color/colorPassword"
            android:textSize="@dimen/settings_size" />
    </LinearLayout>

    <FrameLayout
        android:background="@color/colorBackground"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>