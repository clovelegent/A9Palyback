<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/now_progress" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/gap5dp"
        android:layout_marginRight="@dimen/gap5dp"
        android:layout_below="@id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/media_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPassword"
            android:text="@string/description"/>

        <Button
            android:id="@+id/audio_play_contral"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/audio_pause" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/gap5dp"
        android:id="@+id/total_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPassword"
        android:layout_alignParentTop="true"
        android:text="@string/timer" />

    <TextView
        android:layout_marginRight="@dimen/gap5dp"
        android:id="@+id/now_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPassword"
        android:layout_alignParentTop="true"
        android:text="@string/timer" />

</RelativeLayout>